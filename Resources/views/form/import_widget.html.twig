{% block import_file_widget %}
    <div class="panel panel-info panel-import">
        <div class="panel-heading">
            {{ "import.requirement.title"|trans({}, 'admin') }}
        </div>
        <div class="panel-body">
            <p>{{ "import.requirement.text"|trans({}, 'admin') }}</p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        {% for column in file_form.vars.columns %}
                            <td>{{ column.label }}{% if column.required %}*{% endif %}</td>
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </div>
            <p class="text-warning">* {{ "import.requirement.asterisk"|trans({}, 'admin') }}</p>
            <a class="btn btn-default" download="prototype.csv" href='data:application/csv;charset=utf-8,{{ file_form.vars.csv_prototype }}'>
                <i class="fa fa-download"></i> {{ "import.requirement.download"|trans({}, 'admin') }}
            </a>
        </div>
    </div>
    {{ block('file_widget') }}
{% endblock import_file_widget %}

