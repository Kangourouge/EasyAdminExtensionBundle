{% use '@EasyAdmin/form/bootstrap_3_horizontal_layout.html.twig' %}

{% block form_label_class %}
    {% spaceless %}
        {% if label is same as(false) and compound is same as(true)  %}
            hidden
        {% else %}
            col-sm-2
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block form_group_class %}
    {% spaceless %}
        {% if label is same as(false) and compound is same as(true)  %}
            col-sm-12
        {% else %}
            col-sm-10
        {% endif %}
    {% endspaceless %}
{% endblock %}
