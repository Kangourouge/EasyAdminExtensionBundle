{% extends '@EasyAdmin/default/layout.html.twig' %}

{% form_theme form with easyadmin_config('design.form_theme') %}

{% block content_title %}{{ 'cache.title'|trans({}, 'KRGEasyAdminExtensionBundle') }}{% endblock %}

{% block main %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_start(form) }}
    <div class="row">
        <div class="field-group col-xs-12">
            <div class="box box-default">
                <div class="box-header with-border"><h3 class="box-title">Type</h3></div>
                <div class="box-body">
                    {{ form_widget(form.type) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 form-actions" style="width: 100%;">
            <div class="form-group">
                <div id="form-actions-row">
                    <button type="submit" class="btn btn-danger action-save" onclick="return document.forms.{{ form.vars.name }}.submit();">
                        <i class="fa fa-eraser"></i> {{ 'cache.clear'|trans({}, 'KRGEasyAdminExtensionBundle') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
